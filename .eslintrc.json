{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "import/extensions": ["error", { "jsx": "always" }],
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }]
  },
  "extends": ["airbnb", "plugin:prettier/recommended", "eslint:recommended"]
}
